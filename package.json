{
  "name": "claude-scope",
  "version": "0.1.3",
  "description": "Claude Code plugin for session status and analytics",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "claude-scope": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "tsx --test tests/**/*.test.ts",
    "test:unit": "tsx --test tests/unit/**/*.test.ts",
    "test:integration": "tsx --test tests/integration/**/*.test.ts",
    "test:coverage": "c8 --reporter=text --reporter=html --exclude='tests/**' --exclude='**/*.test.ts' tsx --test tests/**/*.test.ts",
    "test:snapshot": "SNAPSHOT_UPDATE=true tsx --test tests/**/*.test.ts",
    "test:snapshot:verify": "tsx --test tests/**/*.test.ts",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "simple-git": "^3.27.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "imports": {
    "#*": "./src/*.js",
    "#core/*": "./src/core/*.js",
    "#widgets/*": "./src/widgets/*.js",
    "#data/*": "./src/data/*.js",
    "#ui/*": "./src/ui/*.js",
    "#utils/*": "./src/utils/*.js",
    "#schemas/*": "./src/schemas/*.js"
  }
}
